{
  "name": "peerme/mx-sdk-php-network-providers",
  "description": "Network Provider API components (compatible with mx-sdk-php).",
  "scripts": {
    "test": "vendor/bin/pest",
    "test-coverage": "vendor/bin/phpunit --coverage-html coverage"
  },
  "license": "MIT",
  "autoload": {
    "psr-4": {
      "Peerme\\MxProviders\\": "src"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Peerme\\MxProviders\\Tests\\": "tests"
    }
  },
  "authors": [
    {
      "name": "Micha Vie",
      "email": "micha@peerme.io",
      "homepage": "https://michavie.com"
    }
  ],
  "funding": [
    {
      "type": "github",
      "url": "https://github.com/sponsors/peermehq"
    }
  ],
  "require": {
    "php": "^8.1",
    "peerme/mx-sdk-php": "^1.1",
    "guzzlehttp/guzzle": "^7.5",
    "nesbot/carbon": "^2.66"
  },
  "require-dev": {
    "pestphp/pest": "^2.4",
    "spatie/phpunit-snapshot-assertions": "^5.0"
  },
  "config": {
    "allow-plugins": {
      "pestphp/pest-plugin": true
    }
  }
}
